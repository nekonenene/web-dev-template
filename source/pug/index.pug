    //- My Stylesheets
    link(rel="stylesheet", href="./top.css")
  body
    #site-box
      #site-main
        h3 #{title}
        #content
          p
            button.blue-button(type="button") あお
            button.green-button(type="button") みどり
            button.yellow-button(type="button") きいろ
            button.red-button(type="button") あか

          p
            .output

      #footer
        a(href="http://hato-neko.x0.com", target="_blank", title="ハトネコエセンター").
          ハトネコエ

    //- Scripts
    // jQuery
    script(
      src="https://code.jquery.com/jquery-3.2.1.min.js"
      integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous"
